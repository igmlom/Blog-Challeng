<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= thisPageContent %> </p>
<% newPosts.forEach(post=>{ %>

<h2><%= post.postTitle %> </h2>
<% if(post.postBody.length > 100){ %>
<p><%= post.postBody.substring(0, 100) +"..." %>
    <a href="/posts/<%= post.postTitle%>"> Read More</a></p>
<% }else{%>
<p><%= post.postBody %> </p>
<% } %>
<% }) %>
<%- include('partials/footer'); -%>